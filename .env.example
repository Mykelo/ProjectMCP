# MCP BigQuery Server Configuration
# Copy this file to .env and fill in your actual values

# Bearer Token for MCP Authentication
# Generate a secure random token with: openssl rand -hex 32
BEARER_TOKEN=your-secure-bearer-token-here-at-least-32-characters

# Google Cloud Configuration
# Path to your service account JSON key file
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# Your Google Cloud Project ID
GCP_PROJECT_ID=your-gcp-project-id

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Server Configuration
# PORT=8080
# HOST=0.0.0.0

# Docker-specific Configuration
# Path to service account JSON on the host machine (for docker-compose)
GOOGLE_APPLICATION_CREDENTIALS_HOST=/path/to/your/service-account-key.json
